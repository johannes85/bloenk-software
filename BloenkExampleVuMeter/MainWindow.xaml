<Window x:Class="BloenkExampleVuMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blönk Vu Meter Example" Height="167" Width="525" Loaded="Window_Loaded" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>
        <Button x:Name="btnConnect" Content="connect" Margin="423,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.267,0.45" Height="26" Click="btnConnect_Click"/>
        <Label Content="Current peak level:" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" Width="107"/>
        <Label x:Name="lblPeakLevel" Content="0" HorizontalAlignment="Left" Margin="122,86,0,0" VerticalAlignment="Top"/>
        <Label Content="Sound device:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="107"/>
        <Label x:Name="lblSoundDevice" Content="-" HorizontalAlignment="Left" Margin="122,55,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="prgVolumeLevel" Height="26" Margin="354,86,10,0" VerticalAlignment="Top" Maximum="1000"/>
        <Button x:Name="btnDisconnect" Content="disconnect" Margin="423,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.267,0.45" Height="26" Click="btnDisonnect_Click"/>

    </Grid>
</Window>
